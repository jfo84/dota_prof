<div id="main-show" class="large-12 large-centered columns">
  <h1>Player Prof</h1>
  <hr>
  <div class="row large-offset-2 player_match_data">
    <div class="large-4 columns text-center name">
      <% unless @player.name.nil? %>
        <h3><%= @player.name %><h3>
      <% else %>
        <h3>Player name missing.</h3>
      <% end %>
      <h5>Favorite Hero: <%= @eight_four_hero %></h5>
      <%= image_tag "heroes/hero_#{@eight_four_hero_id}.jpg" %>
    </div>
    <div class="left large-4 columns text-center stats">
      <h3>Averages in 6.84</h3>
      <h5>Kills: <%= @eight_four_matches.average(:kills).round(1) %> -
          Deaths: <%= @eight_four_matches.average(:deaths).round(1) %> -
          Assists: <%= @eight_four_matches.average(:assists).round(1) %></h5>
      <h5>GPM: <%= @eight_four_matches.average(:gpm).to_i %> -
          XPM: <%= @eight_four_matches.average(:xpm).to_i %></h5>
      <h5>Hero Damage: <%= @eight_four_matches.average(:hero_damage).to_i %></h5>
      <h5>Tower Damage: <%= @eight_four_matches.average(:tower_damage).to_i %></h5>
      <h5>Last Hits: <%= @eight_four_matches.average(:last_hits).to_i %> -
          Denies: <%= @eight_four_matches.average(:denies).to_i %></h5>
    </div>
  </div>
  <div class="row submissions">
    <h1>Prof Submissions</h1>
    <hr>
    <div class="large-12 columns">
      <% unless @submissions.nil? %>
        <% @submissions.each do |submission| %>
          <h3><span id="score-<%= submission.id %>"><%= submission.votes_for.size %></span>
              <%= link_to like_player_submission_path(@player, submission), class: "like-button" do %>
                <span><%= image_tag "like.png", :class => "like", :id => submission.id %></span>
              <% end %>
              <%= submission.content %></h3>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="new-submission container" ng-controller="ThumbnailsCtrl">
      <%= form_for [@player, @submission], :html => { "ng-submit" => "submit()" } do |f| %>

        <%= f.label "content" %>
        <%= f.text_area :content, "ng-model" => "url", required: true %>

        <%= f.submit "Submit", class: "button tiny round" %>
      <% end %>
    </div>
  </div>
  <div class="row" ng-controller="ThumbnailsCtrl">
    <div class="large-6 columns">
      <slide ng-repeat="video in videos">
        <div ng-bind-html="html_safe(video.embed_code)"></div>
      </slide>
    </div>
    <div class="large-6 columns">
      <h3 style="margin-top: 0px; text-align: left;">
        {{ title }}
        <img ng-src="{{ favicon }}" ng-if="favicon" width="20" height="20">
      </h3>
      <p class="lead" style="text-align: left;">{{ description }}</p>
    </div>
  </div>
</div>
</div>
